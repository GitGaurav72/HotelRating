package com.novaedge.micro.ratingservice.entity;

import java.time.LocalDateTime;
import jakarta.persistence.*;

import org.hibernate.annotations.CurrentTimestamp;
import org.springframework.data.annotation.Id;

@Entity
@Table(name = "TB_NOVA_MCRO_RATING")
public class TbNovaMcroRating {

    @Id
    @Column(name = "RATING_ID")
    private Long ratingId;

    @Column(name = "USER_ID", nullable = false)
    private String userId;
    
    @Column(name = "HOTEL_ID", nullable = false)
    private String hotelId;

    @Column(name = "RATING", nullable = false)
    private Double rating;

    @Column(name = "COMMENT")
    private String comment;

    @CurrentTimestamp
    @Column(name = "CREATED_AT", updatable = false)
    private LocalDateTime createdAt;

    @Column(name = "UPDATED_AT")
    private LocalDateTime updatedAt;

	public Long getRatingId() {
		return ratingId;
	}

	public void setRatingId(Long ratingId) {
		this.ratingId = ratingId;
	}

	public String getUserId() {
		return userId;
	}

	public void setUserId(String userId) {
		this.userId = userId;
	}

	public String getHotelId() {
		return hotelId;
	}

	public void setHotelId(String hotelId) {
		this.hotelId = hotelId;
	}

	public Double getRating() {
		return rating;
	}

	public void setRating(Double rating) {
		this.rating = rating;
	}

	public String getComment() {
		return comment;
	}

	public void setComment(String comment) {
		this.comment = comment;
	}

	public LocalDateTime getCreatedAt() {
		return createdAt;
	}

	public void setCreatedAt(LocalDateTime createdAt) {
		this.createdAt = createdAt;
	}

	public LocalDateTime getUpdatedAt() {
		return updatedAt;
	}

	public void setUpdatedAt(LocalDateTime updatedAt) {
		this.updatedAt = updatedAt;
	}

	public TbNovaMcroRating(Long ratingId, String userId, String hotelId, Double rating, String comment,
			LocalDateTime createdAt, LocalDateTime updatedAt) {
		super();
		this.ratingId = ratingId;
		this.userId = userId;
		this.hotelId = hotelId;
		this.rating = rating;
		this.comment = comment;
		this.createdAt = createdAt;
		this.updatedAt = updatedAt;
	}

	public TbNovaMcroRating() {
		super();
		// TODO Auto-generated constructor stub
	}

    

}
